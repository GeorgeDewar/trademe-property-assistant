{
  "manifest_version": 2,
  "name": "TradeMe Property Assistant",
  "version": "0.2",
  "description": "Show travel time to your workplace, rating information and more when you look at property on TradeMe",
  "content_scripts": [
    {
      "matches": ["http://www.trademe.co.nz/*"],
      "js": [
         "jquery-1.11.1.min.js",
         "defaults.js",
         "components/traveltime.js",
         "components/ratinginfo.js",
         "contentscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "http://maps.googleapis.com/",
    "http://rating.dewar.co.nz/",
    "http://localhost:4567/",
    "storage"
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    "img/*"
  ],
  "icons": { "128": "img/icon-128.png" }
}
